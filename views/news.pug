extends layout

block extraHeader
  link(rel='stylesheet', href='/stylesheets/news.css')
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')

block content
  .container
    h1.header Fréttir
    h3.header_about Hér getur fólk skrifað fréttir um allt sem tengist íslenska fótboltanum, til dæmis úrslit úr leikjum, fréttir um meiðsli, reynslusögur, tippábendingar og margt fleira. Taktu þátt!
    .site-header
      .site-header-buttons
        a.btn.btn-default.btn-lg(href='newTopic') Ný frétt
          span.glyphicon.glyphicon-pencil(aria-hidden='true')
    hr
    .entries
      if !data || data.length === 0
        p Engar færslur!
        hr
      else
        each item in data
          .panel-success
            .panel-heading
              h3.topicname= item.entry_topic_name
              span.date= moment(item.entry_date).format('DD.MM.YYYY HH:mm')
            .panel-body
              p.name= item.entry_name
                |  skrifar:
              p.text= item.entry_data
